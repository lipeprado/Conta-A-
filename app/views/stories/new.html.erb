<div class="container">
    <div class="col-md-12">
        <div class="form-area">
            <% if @story.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@story.errors.count, "erro") %>. Corrija os erros para continuar:</h2>

                <ul>
                    <% @story.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <h3>Crie Sua Historia</h3>
            <%= render 'form' %>

          
        </div>
