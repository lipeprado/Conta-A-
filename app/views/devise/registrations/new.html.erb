<div class="box-cadastro">


<h2 class="text-center text-info">Cadastrar</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Seu Nome Completo' %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: 'Seu Email' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control",  placeholder: 'Sua Senha ( minimo 6 caracteres )' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",  placeholder: 'Sua Senha ( minimo 6 caracteres )' %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class: "btn btn-default btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
