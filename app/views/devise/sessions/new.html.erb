<div class="box-cadastro">
<h2 class="text-center text-success">Entrar</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group">
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Seu Email' %>
</div>

<div class="form-group">
  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Sua Senha' %>
</div>

<% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-block btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
